extends layout

block content
	if (session.username)
		h1 Home
		hr

		.card.mb-2
			.card-body
				- var buttons = [[`/links`, "My Links", "fas fa-stream", linkCount], ["/tags", "My Tags", "fas fa-tag", tagCount]];

				.d-none.d-md-block
					each item in buttons
						a.btn.btn-primary.mr-2(href=item[0])
							i.mr-2(class=item[2])
							| #{item[1]}
							if (item.length > 3)
								span.badge.badge-light.ml-2 #{item[3].toLocaleString()}

					
				.d-md-none
					each item in buttons
						a.btn.btn-primary.btn-block(href=item[0])
							i.mr-2(class=item[2])
							| #{item[1]}
							if (item.length > 3)
								span.badge.badge-light.ml-2 #{item[3].toLocaleString()}
		
		.card.mb-2
			.card-body
				h5 Tools
				hr

				- var buttons = [["/new-link", "New Link", "fas fa-plus-circle", "Add a new link"]];

				.d-none.d-md-block
					each item in buttons
						a.btn.btn-primary.mr-2(href=item[0], title=item[3], data-toggle="tooltip")
							i.mr-2(class=item[2])
							| #{item[1]}

					
				.d-md-none
					each item in buttons
						a.btn.btn-primary.btn-block(href=item[0], title=item[3], data-toggle="tooltip")
							i.mr-2(class=item[2])
							| #{item[1]}
				

	else
		h1 #{appConfig.siteName}
		hr

		h5 Welcome to #{appConfig.siteName}. If you have an account, login below. If not, you can 
			a(href="/signup") Sign up
			| .

		.row.mt-5
			.col-md-3.col-lg-3
			.col-md-6.col-lg-6
				include ./shared/login-form.pug