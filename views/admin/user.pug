extends adminLayout

block adminContent
	h1 User: #{user.username}
	hr

	.mb-4
		table.table.table-striped
			tr
				th Username
				td.text-monospace #{user.username}

			tr
				th Roles
				td.text-monospace
					if (user.roles)
						| #{user.roles}
					else
						| -
			
			tr
				th Created At
				td.text-monospace #{utils.formatDate(user.createdAt)}
			
			tr
				th Updated At
				td.text-monospace #{utils.formatDate(user.updatedAt)}

			tr
				th Link(s)
				td.text-monospace #{linkCount.toLocaleString()}
	

	hr
	
	.col-md-3.d-grid
		a.btn.btn-danger(href=`/admin/user/${user.username}/delete`) Delete User
			