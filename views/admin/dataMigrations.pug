extends adminLayout

block adminContent
	h1 Data Migrations
	hr

	.card
		.card-body
			table.table.table-striped
				thead
					tr
						th #
						th ID
						th Name
						th Run At
				
				tbody
					each dataMigration, dataMigrationIndex in dataMigrations
						tr.text-monospace
							th #{(dataMigrationIndex + 1).toLocaleString()}
							td
								span.border-dotted(data-bs-toggle="tooltip", title=dataMigration._id) #{utils.ellipsizeFront(dataMigration._id.toLocaleString(), 8)}

							td #{dataMigration.name}
							td #{utils.formatDate(dataMigration.createdAt)}
							

					