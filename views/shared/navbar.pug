nav.navbar.navbar-expand-md.navbar-dark.bg-header-footer.px-0
	.container-fluid.px-8
		a.navbar-brand(href="/")
			img.rounded.me-2.mt-n2.mb-n1(src="/img/icon/favicon-32x32.png" srcset="/img/icon/favicon-32x32.png 1x, /img/icon/apple-touch-icon.png 2x" alt="logo" style="width: 30px; height: 30px;")
			span.d-none.d-md-inline #{global.appConfig.siteName}
		if (session.username)
			ul.navbar-nav.ms-4
				li.nav-item.me-2
					a.nav-link(href="/new-link", title="New Link", data-bs-toggle="tooltip", data-bs-placement="bottom")
						i.bi-link-45deg.fs-5.text-white

				li.nav-item.me-2
					a.nav-link(href="/new-note", title="New Note", data-bs-toggle="tooltip", data-bs-placement="bottom")
						i.bi-file-earmark-text.fs-5.text-white

				li.nav-item.me-2
					a.nav-link(href="/new-image", title="New Image", data-bs-toggle="tooltip", data-bs-placement="bottom")
						i.bi-image.fs-5.text-white

				li.nav-item.me-2
					a.nav-link(href="/tags", title="View All Tags", data-bs-toggle="tooltip", data-bs-placement="bottom")
						i.bi-tag-fill.fs-5.text-white

				if (false)
					li.nav-item.d-none.d-md-inline
						a.nav-link(href="/tags") Tags

		button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav")
			span.navbar-toggler-icon
		
		div.collapse.navbar-collapse#navbarNav
			ul.navbar-nav.me-auto

			
			form.form-inline.me-3(method="get", action="/search")
				div.input-group
					input.form-control(type="text", name="query", placeholder="search...", value=(query))
					button.btn.btn-primary(type="submit")
						i.bi-search
			
			if (session.username)
				ul.navbar-nav
					li.nav-item
						if (userSettings.uiTheme == "light")
							a.nav-link(href=`./changeSetting?name=uiTheme&value=dark`, data-bs-toggle="tooltip", title="Switch to dark theme")
								i.fas.bi-moon
						else
							a.nav-link(href=`./changeSetting?name=uiTheme&value=light`, data-bs-toggle="tooltip", title="Switch to light theme")
								i.fas.bi-sun
									
					li.nav-item.dropdown
						a#navbarDropdown.nav-link.dropdown-toggle(href="javascript:void(0)", role="button", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false") #{session.username}
						.dropdown-menu.dropdown-menu-end(aria-labelledby="navbarDropdown")
							a.dropdown-item(href="/account")
								i.bi-person-circle.me-2
								| My Account

							a.dropdown-item(href="/settings")
								i.bi-gear.me-2
								| Settings

							if (session.user && session.user.roles && session.user.roles.includes("admin"))
								a.dropdown-item(href="/admin")
									i.bi-shield-lock.me-2
									| Admin

							.dropdown-divider
							a.dropdown-item(href="/logout")
								i.bi-box-arrow-right.me-2
								| Logout