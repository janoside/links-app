nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
	.container
		a.navbar-brand(href="/") #{global.appConfig.siteName}
		if (session.username)
			ul.navbar-nav
				li.nav-item.active
					a.nav-link(href="/new-link") New Link

		button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav")
			span.navbar-toggler-icon
		
		div.collapse.navbar-collapse#navbarNav
			ul.navbar-nav.mr-auto
				
			
			form.form-inline.mr-3(method="get", action="/search")
				div.input-group.input-group-sm
					input.form-control.form-control-sm(type="text", name="query", placeholder="search...", value=(query))
					div.input-group-append
						button.btn.btn-primary(type="submit")
							i.fas.fa-search
			
			if (session.username)
				ul.navbar-nav
					li.nav-item.dropdown
						a#navbarDropdown.nav-link.dropdown-toggle(href="javascript:void(0)", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") #{session.username}
						.dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
							a.dropdown-item(href="/account")
								i.fas.fa-user-circle.mr-2
								| My Account

							a.dropdown-item(href="/settings")
								i.fas.fa-cog.mr-2
								| Settings

							if (session.user && session.user.roles && session.user.roles.includes("admin"))
								a.dropdown-item(href="/admin")
									i.fas.fa-lock.mr-2
									| Admin

							.dropdown-divider
							a.dropdown-item(href="/logout")
								i.fas.fa-sign-out-alt.mr-2
								| Logout