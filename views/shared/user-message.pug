if (userMessage || userMessageMarkdown)
	.position-fixed.top-0.start-50.translate-middle-x.p-3.mt-7
		.toast.align-items-center.text-white.border-0(id="userMessageToast", class=(userMessageType ? `bg-${userMessageType}` : "bg-primary") role="alert", aria-live="assertive", aria-atomic="true")
			.d-flex
				.toast-body
					if (userMessage)
						span #{userMessage}

					if (userMessageMarkdown)
						.user-message-markdown
							| !{marked.parse(userMessageMarkdown)}

				button.btn-close.btn-close-white.me-2.m-auto(type="button", data-bs-dismiss="toast", aria-label="Close")
